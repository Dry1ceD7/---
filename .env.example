# Advanced Vending Machine Age Verification System
# Environment Configuration Template

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vending-age-verification
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Smart Card Configuration
SMARTCARD_READER_NAME=ACS ACR122U
SMARTCARD_TIMEOUT=5000
SMARTCARD_RETRY_ATTEMPTS=3
SMARTCARD_RETRY_DELAY=1000

# Biometric Configuration
BIOMETRIC_CONFIDENCE_THRESHOLD=0.8
BIOMETRIC_LIVENESS_THRESHOLD=0.7
BIOMETRIC_MAX_PROCESSING_TIME=10000
BIOMETRIC_MODEL_PATH=./models

# MDB Protocol Configuration
MDB_PORT=/dev/ttyUSB0
MDB_BAUD_RATE=9600
MDB_TIMEOUT=5000
MDB_RETRY_ATTEMPTS=3
MDB_RETRY_DELAY=1000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=30m
ENCRYPTION_KEY=your-32-byte-encryption-key-here
BCRYPT_ROUNDS=12

# Age Thresholds
AGE_THRESHOLD_ALCOHOL=20
AGE_THRESHOLD_TOBACCO=20
AGE_THRESHOLD_GENERAL=18
AGE_THRESHOLD_MEDICINE=18

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_ENABLE_REMOTE=false
LOG_REMOTE_ENDPOINT=

# Cloud Connectivity
CLOUD_ENABLED=false
CLOUD_API_URL=https://api.vending-cloud.com
CLOUD_API_KEY=your-cloud-api-key
CLOUD_SYNC_INTERVAL=300000
CLOUD_MAX_RETRIES=3
CLOUD_TIMEOUT=30000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Monitoring
MONITORING_ENABLED=true
MONITORING_METRICS_INTERVAL=60000
MONITORING_HEALTH_CHECK_INTERVAL=30000
MONITORING_CPU_THRESHOLD=80
MONITORING_MEMORY_THRESHOLD=80
MONITORING_RESPONSE_TIME_THRESHOLD=5000

# Development Settings
DEBUG_MODE=false
ENABLE_TEST_DATA=true
MOCK_SMARTCARD=true
MOCK_BIOMETRIC=true
MOCK_MDB=true
